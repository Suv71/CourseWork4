<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.asus.radioclient.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Логин" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text=""
            android:id="@+id/etLogin"
            android:layout_marginLeft="10dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Пароль" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text=""
            android:id="@+id/etPassword"
            android:layout_marginLeft="10dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Send"
            android:id="@+id/btnSend"
            android:layout_gravity="center"
            android:onClick="OnClickSend" />

        <TextView
            android:text="Server answer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvServerAnswer"
            android:layout_marginTop="10dp"/>

        <Button
            android:text="Start Record"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnStartRecord"
            android:onClick="recordStart"/>

        <Button
            android:text="Stop Record"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnStopRecord"
            android:onClick="recordStop"/>

        <Button
            android:text="Start playing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnStartPlay"
            android:onClick="playStart"/>

    </LinearLayout>
</LinearLayout>
